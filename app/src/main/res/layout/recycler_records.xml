<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="15dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:id="@+id/recycler_recs"
    android:orientation="vertical"
    android:background="@drawable/transparent_bg_with_border">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/rec_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Date Here"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rec_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Address Here"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rec_doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr's Name Here"
            android:textSize="15sp"
            android:textColor="@color/colorAccent1"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/rec_record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Type"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/rec_record_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Here"
            android:textColor="@color/red"
            android:textAlignment="textEnd"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>