<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ForgotPassword3Activity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/app_logo"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change your password"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/forgot_passwd_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter new password"
        android:backgroundTint="@color/grad_purple"
        android:padding="15dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="italic"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/edic_passwd_outline_black_24dp"
        android:drawablePadding="5dp">
    </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/forgot_passwd_cnf_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm new password"
        android:backgroundTint="@color/grad_purple"
        android:padding="15dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="italic"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/edic_passwd_outline_black_24dp"
        android:drawablePadding="5dp">
    </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/chng_passwd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="CHANGE"
        android:textColor="@color/light_grey"
        android:background="@drawable/in_app_butt"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/back_btn_fp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- - Back - -"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>