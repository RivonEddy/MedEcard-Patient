<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="50dp"
        android:background="@drawable/bottom_border">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Personal Info"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/tips_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_health_tips_blue_24dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

    <ScrollView
        android:layout_below="@+id/top_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-45dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/edit_pers_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:textColor="@color/grad_purple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/edit_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_edit_text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:hint="Hassan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/edit_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_edit_text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:hint="Biodun"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/edit_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_edit_text"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:inputType="textShortMessage"
            android:textSize="15sp"
            android:hint="15-02-1982"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_edit_text"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"/>

                <EditText
                    android:id="@+id/edit_weight"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_edit_text"
                    android:hint="89kg"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:inputType="textShortMessage"/>

                <EditText
                    android:id="@+id/edit_height"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:hint="160cm"
                    android:background="@drawable/white_edit_text"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:inputType="textShortMessage"/>

            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"/>

        <Spinner
            android:id="@+id/spinner_bgroup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/white_edit_text"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupation"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/edit_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_edit_text"
            android:inputType="textShortMessage"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Painting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_edit_text"
            android:inputType="textLongMessage"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:hint="7, Opebi Crescent, Ikeja - GRA, Lagos"/>

        <Button
            android:id="@+id/pers_info_sbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:background="@drawable/white_edit_text_purp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>